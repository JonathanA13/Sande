<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="12dp">

        <RelativeLayout
            android:layout_width="769dp"
            android:layout_height="112dp">

            <LinearLayout
                android:layout_width="726dp"
                android:layout_height="101dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="328dp"
                    android:layout_height="99dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="146dp"
                        android:layout_height="87dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView28"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Bloque: "
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/textView29"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Cama: "
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/textView30"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Variedad: "
                            android:textSize="18sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="87dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtViewBloqueRecycler"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="TextView"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/txtViewCamaRecycler"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="TextView"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/txtViewVariedadRecycler"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="TextView"
                            android:textSize="18sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="322dp"
                    android:layout_height="96dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="151dp"
                        android:layout_height="85dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView31"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Tipo Siembra: "
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/textView32"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Metros: "
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/textView33"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Calibre: "
                            android:textSize="18sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="85dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtViewTipoSIembraRecycler"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="TextView"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/txtViewMetrosRecycler"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="TextView"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/txtViewCalibreRecycler"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="TextView"
                            android:textSize="18sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="85dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imagenEditar"
                        android:layout_width="49dp"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/botoneditar" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>