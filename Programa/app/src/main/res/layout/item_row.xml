<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="89dp"
        android:orientation="horizontal"
        android:padding="12dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_blo"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:text="Bloque"
                    android:textAlignment="center"
                    android:textSize="21sp" />

                <TextView
                    android:id="@+id/txt_cama"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cama"
                    android:textAlignment="center"
                    android:textSize="21sp" />

                <TextView
                    android:id="@+id/txt_variedad"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Variedad"
                    android:textAlignment="center"
                    android:textSize="21sp" />

                <TextView
                    android:id="@+id/txt_proce"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:text="Proce"
                    android:textSize="21sp" />

                <TextView
                    android:id="@+id/txt_tipo"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:text="tipo"
                    android:textSize="21sp" />

                <TextView
                    android:id="@+id/txt_metro"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:text="Metros"
                    android:textSize="21sp" />

                <TextView
                    android:id="@+id/txt_calibre"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:text="Calibre"
                    android:textSize="21sp" />


            </LinearLayout>
        </RelativeLayout>


    </LinearLayout>
</LinearLayout>